{
	"extends": [
		"eslint:recommended",
		"next/core-web-vitals",
		"plugin:prettier/recommended",
		"plugin:react/recommended"
	],
	"plugins": [
		"prettier",
		"react",
		"react-hooks"
	],
	"rules": {
		"eqeqeq": "error",
		"no-undef": "off",
		"no-unused-vars": "off",
		"prettier/prettier": "error",
		"react/prop-types": "off"
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true
	},
	"ignorePatterns": [
		"node_modules",
		"build",
		"dist",
		"public"
	]
}
